<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/orm/hbm">
    <class name="database.entities.Flight" table="flight">
        <id name="id" column="id" type="int">
            <generator class="native"/>
        </id>

        <property name="flightNumber" column="flightNumber" type="string" not-null="true" unique="true"/>
        <property name="startAirport" column="startAirport" type="string" not-null="true"/>
        <property name="destAirport" column="destAirport" type="string" not-null="true"/>
        <property name="startDate" column="startDate" type="date" not-null="true"/>
        <property name="startTime" column="startTime" type="time" not-null="true"/>
        <property name="gate" column="gate" type="string" not-null="true"/>
    </class>
</hibernate-mapping>